{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@data/*": ["data/*"],
        "@message/*":["data/message/*"],
        "@User/*":["data/user/*"],
        "@config/*": ["src/config/*"],
        "@routes/*": ["src/routes/*"],
        "@Crypto/*": ["config/crytpto/Crypto/*"],
        "@Config_Json/*": ["config/JSON/Json/*"],        
        "@helpers/*": ["src/helpers/*"],
        "@models/*": ["src/models/*"],
        "@controller/*": ["src/controller/*"],
        "@database/*": ["src/database/*"],
        "@public/*":["src/public/*"],
      }
    },
    "exclude": ["node_modules", "dist"]
} 