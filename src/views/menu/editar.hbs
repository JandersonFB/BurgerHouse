<div class="container">
    <div class="card">
        <div class="card-body">
            <h5 class="text-center">Pagina para Editar</h5>
            <hr>
            {{>_msg}}
            <form action="/menu/editando" method="post">
                <div class="row col-12">
                    <div class="form-group col-12">
                        {{#each result}}
                        <input type="hidden" name="id" value="{{id}}">
                        <input type="text" name="class" value="{{class}}" class="form-control">
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="">Nome</label>
                        <input type="text" name="name" id="name" class="form-control" value="{{name}}">
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-12">
                        <label for="">Descrição</label>
                        <textarea name="desc" id="desc" cols="30" rows="10" class="form-control">{{desc}}</textarea>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="form-group col-6">
                        <label for="">Gasto Material</label>
                        <input type="text" name="costProduce" id="costProduce" class="form-control"
                            value="{{costProduce}}">
                    </div>
                    <div class="form-group col-6">
                        <label for="">Valor Venda</label>
                        <input type="text" name="value" id="value" class="form-control" value="{{value}}">
                    </div>
                </div>
                <div class="row col-12 mt-2">
                    <div class="form-group col-12">
                        <button class="btn btn-outline-success col-12">Enviar</button>
                    </div>
                </div>
                {{/each}}
            </form>
        </div>
    </div>
</div>