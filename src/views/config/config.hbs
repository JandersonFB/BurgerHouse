                                        <input type="checkbox" id="confiClass" checked data-toggle="modal"
                                            style="color: black;">
                                        {{else}}
                                        <input type="checkbox" id="confiClass" data-toggle="modal"
                                            style="color: black;">
                                        {{/if}}
                                        <span class="slider round"></span>
                                    </label>
                                </ol>
                            </div>
                        </div> --}}
            </div>
        </div>

    </div>
</div>
</div>


